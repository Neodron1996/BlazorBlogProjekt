@page "/posts/{url}"
@inject BlazorBlogProjekt.Client.Services.IBlogService BlogService


<h3>@CurrentPost.PostTitle</h3>

<div>
    @CurrentPost.PostContent
</div>

@code {
    private BlazorBlogProjekt.Shared.BlogPost CurrentPost;

    [Parameter]
    public string Url { get; set; }

    protected override async Task OnInitializedAsync()
    {
        CurrentPost = await BlogService.GetBlogPostByUrl(Url);
    }
}
